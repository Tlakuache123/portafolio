---
interface Props {
  title: string;
  body: string;
  id: string;
}

const { title, body, id } = Astro.props;
---

<li class="border-neutral-900 border rounded-sm px-4 py-2 w-full" id={id}>
  <h2 class="text-2xl md:text-center">
    {title}
  </h2>
  <p class="text-md font-thin">
    {body}
  </p>
</li>
